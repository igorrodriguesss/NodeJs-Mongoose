<h1>Todos os produtos</h1>

<div class="products">
{{#each products}}

    <div class="product">
        <img src="{{this.image}}">
        <h3>{{this.name}}</h3>
        <p>R${{this.price}}</p>
        <a href="/products/{{this._id}}">Detalhes</a>
        <a href="/products/edit/{{this._id}}">Editar</a>
    </div>
{{/each}}
</div>